<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BankVerifier">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bank Resolver"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_margin="20dp"/>

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:smsp_floatingLabelText="Select Bank"
        app:smsp_hint="Select Ban"
        app:smsp_hintColor="#388E3C"
        app:smsp_itemColor="#512DA8"
        app:smsp_itemListColor="#7C4DFF"
        android:background="@drawable/border"
        android:padding="10dp"
        app:smsp_underlineColor="@android:color/transparent"
        app:smsp_itemListHintBackgroundColor="#808080"
        app:smsp_itemListHintColor="#FFFFFF"
        app:smsp_multilineError="false"
        app:smsp_selectedItemListColor="#FF5252" />

    <EditText
        android:id="@+id/etAcct"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/border"
        android:padding="20dp"
        android:inputType="number"
        android:maxLength="10"
        android:hint="Enter your account number"
        android:textColorHint="@android:color/black"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_border"
        android:text="Proceed"
        android:textColor="@android:color/white"
        android:textSize="23dp"
        android:layout_margin="20dp"/>

</LinearLayout>